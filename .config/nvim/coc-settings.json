{
    // explorer
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": "content",
    "explorer.keyMappings.global": {
        "<cr>": ["expandable?", "expand", "open"],
        "v": "open:vsplit"
    },
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--igonre", "E501"],
    "pyright.organizeimports.provider": "isort",
    "pyright.disableDiagnostics": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "html", "yaml", "python", "java", "vim"],
    "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
    "git.enableGutters": false,
    "suggest.completionItemKindLabels": {
    "method": "",
    "function": "",
    "variable": "",
    "field": "綠",
    "typeParameter": "<>",
    "constant": "",
    "class": "",
    "interface": "禍",
    "struct": " ",
    "event": "",
    "operator": "",
    "module": "",
    "property": " ",
    "enum": "",
    "reference": "",
    "keyword": "",
    "file": "",
    "folder": " ",
    "color": "",
    "unit": "塞",
    "snippet": "",
    "text": "",
    "constructor": "",
    "value": "",
    "enumMember": ""
  }
}
