{
    // explorer
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": "content",
    "explorer.keyMappings.global": {
        "<cr>": ["expandable?", "expand", "open"],
        "v": "open:vsplit"
    },
    "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "html", "yaml", "python", "java", "c", "cpp", "vim"],
    "snippets.userSnippetsDirectory": "~/.config/nvim/snippets"
}
